        </tr>
        @foreach (var item in Model)
        {
            <tr class="shopping-cart-item" style="text-align:center; font-weight:bold; ">
                <td> @item.iMaHH </td>
                <td> @item.sTenHH</td>
                <td><img src="~/images/@item.sHinhAnh" style="max-height:200px; max-width:100px"></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaHH }))
                {
                    <td>
                        <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:yellow" />
                    </td>
