        </tr>
        <tr style="font-weight: bold; color:blue; text-align:right ">
            <td colspan="9">
                @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGiohHang")
            </td>
        
    </table>
</div>
<a href="@Url.Action("DatHang", "GioHang")" class="btn btn-large btn-block btn-danger btn-checkout" style="text-align:center;margin:auto; width:200px;">
    ÐẠT HÀNG
</a>*@



<div class="account-in">
    <div class="container">
        <div class="check_box">
            <div class="col-md-9 cart-items">
                <h1>Thông Tin Giỏ Hàng(<span style="color:orangered">@Session["SoHang"]</span>)</h1>
                <script>$(document).ready(function(c) {
					$('.close1').on('click', function(c){
						$('.cart-header').fadeOut('slow', function(c){
							$('.cart-header').remove();
						});
						});
					});</script>
@foreach (var item in Model)
{                <div class="cart-header" style="background-color:#222">
                     <div class="close1">@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.iMaHH })</div>
                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <img class="img-responsive" alt="" src="~/images/@item.sHinhAnh">
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="@Url.Action("Details", "TrangChu", new { id = item.iMaHH})">@item.sTenHH</a><span>Model No: @item.iMaHH</span></h3>
                            <ul class="qty">
                                <li><p>Size : 5</p></li>
                                <li><p>Số Lượng : @item.iSoLuong</p></li>
                            </ul>
                            <div class="delivery">
                                <p>Service Charges : Rs.100.00</p>
                                <span>Giao Trong 5-7 ngày nữa</span>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
}
                

            </div>
            <div class="col-md-3 cart-total">
                <a class="continue" href="~/TrangChu/Index">Tiếp Tục Mua Sắm</a>
                <div class="price-details">
                    <h3>Bảng Đơn Giá</h3>
                    <span>Tổng Tiền</span>
                    <span class="total1">@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ </span>
                    <span>Giảm Giá</span>
                    <span class="total1">---</span>
                    <span>Phí Vận Chuyển</span>
                    <span class="total1"></span>
                    <div class="clearfix"></div>
                </div>
                <ul class="total_price">
                    <li class="last_price"> <h4>Tổng</h4></li>
                    <li class="last_price"><span>@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</span></li>
                    <div class="clearfix"> </div>
                </ul>
                <div class="clearfix"></div>
                <a class="order" href="@Url.Action("DatHang", "GioHang")">Xác Nhận Đơn Hàng</a>
                @*<div class="total-item">
                    <h3>OPTIONS</h3>
                    <h4>COUPONS</h4>
                    <a class="cpns" href="#">Apply Coupons</a>
                    <p><a href="#">Log In</a> to use accounts - linked coupons</p>
                </div>*@
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>




