@using ShopDTDD.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="~/css/bootstrapwatch.css" rel="stylesheet" />
<link href="~/css/styleWatch.css" rel="stylesheet" />

