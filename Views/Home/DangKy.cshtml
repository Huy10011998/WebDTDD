
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model ShopDTDD.Models.tb_TaiKhoan
<link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet" />
<div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    @using (Html.BeginForm())
    {

        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 mb-4" style="color:whitesmoke">Create an Account!</h1>

                    </div>
                    <form class="user">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.TextBox("FirstName", null, new { @class = "form-control form-control-user", @placeholder = "First Name" })
                                <!--<input class="form-control form-control-user" id="FirstName" type="text" placeholder="First Name">-->
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBox("LastName", null, new { @class = "form-control form-control-user", @placeholder = "First Name" })
                                <!--<input class="form-control form-control-user" id="LastName" type="text" placeholder="Last Name">-->
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Email", null, new { @class = "form-control form-control-user", @placeholder = "Email" })
                            <!--<input class="form-control form-control-user" id="Email" type="email" placeholder="Email Address">-->
                            @ViewData["LoiEmail"]
                            @ViewData["LoiEmail2"]
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Phone", null, new { @class = "form-control form-control-user", @placeholder = "Phone" })
                            <!--<input class="form-control form-control-user" id="Email" type="email" placeholder="Email Address">-->
                            
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Address", null, new { @class = "form-control form-control-user", @placeholder = "Address" })
                            <!--<input class="form-control form-control-user" id="Email" type="email" placeholder="Email Address">-->
                            
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.Password("Pass", null, new { @class = "form-control form-control-user", @placeholder = "Password" })
                                <!--<input class="form-control form-control-user" id="Pass" type="password" placeholder="Password">-->
                                @ViewData["LoiPass"]
                            </div>
                            <div class="col-sm-6">
                                @Html.Password("RePass", null, new { @class = "form-control form-control-user", @placeholder = "Repeat Password" })
                                @ViewData["LoiRePass"]
                            </div>
                        </div>
                        <input type="Submit" value="Register Account" class="btn btn-primary btn-user btn-block" />
                        <hr>

                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/Home/DangNhap">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
