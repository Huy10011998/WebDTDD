
@{
    ViewBag.Title = "ThemTKAdmin";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

@model ShopDTDD.Models.tb_TaiKhoan
<link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet" />
<div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    @using (Html.BeginForm())
    {

        <div class="row">

            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 mb-4" style="color:black">Thêm Tài Khoản!</h1>

                    </div>
                    <form class="user">

                        <div class="form-group">
                            @Html.TextBox("TenTK", null, new { @class = "form-control form-control-user", @placeholder = "TenTK" })
                            <!--<input class="form-control form-control-user" id="Email" type="email" placeholder="Email Address">-->
                            @ViewData["LoiTenTK"]
                            @ViewData["LoiTenTK2"]
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.Password("Pass", null, new { @class = "form-control form-control-user", @placeholder = "Password" })
                                <!--<input class="form-control form-control-user" id="Pass" type="password" placeholder="Password">-->
                                @ViewData["LoiPass"]
                            </div>
                            <div class="col-sm-6">
                                @Html.Password("RePass", null, new { @class = "form-control form-control-user", @placeholder = "Repeat Password" })
                                @ViewData["LoiRePass"]
                            </div>
                        </div>
                        <input type="Submit" value="Thêm Tài Khoản" class="btn btn-primary btn-user btn-block" />
                        <hr>

                    </form>
                    <hr>

                </div>
            </div>
        </div>

    }

</div>
